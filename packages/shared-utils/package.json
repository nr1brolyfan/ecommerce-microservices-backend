{
  "name": "@repo/shared-utils",
  "version": "1.0.0",
  "description": "Shared utility functions for JWT, auth, logging and responses",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./auth": {
      "types": "./dist/auth/middleware.d.ts",
      "default": "./dist/auth/middleware.js"
    },
    "./jwt": {
      "types": "./dist/jwt/index.d.ts",
      "default": "./dist/jwt/index.js"
    },
    "./logger": {
      "types": "./dist/logger/index.d.ts",
      "default": "./dist/logger/index.js"
    },
    "./response": {
      "types": "./dist/response/index.d.ts",
      "default": "./dist/response/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@repo/shared-types": "workspace:*",
    "bcrypt": "^5.1.1",
    "hono": "^4.6.14",
    "jose": "^5.9.6",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@repo/shared-config": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "typescript": "^5.9.3"
  }
}
