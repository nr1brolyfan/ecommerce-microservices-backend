{
  "name": "@repo/shared-types",
  "version": "1.0.0",
  "description": "Shared TypeScript types, DTOs, domain models and errors",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./domain/entities": {
      "types": "./dist/domain/entities/index.d.ts",
      "default": "./dist/domain/entities/index.js"
    },
    "./domain/value-objects": {
      "types": "./dist/domain/value-objects/index.d.ts",
      "default": "./dist/domain/value-objects/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "default": "./dist/errors/index.js"
    },
    "./dtos/*": {
      "types": "./dist/dtos/*.d.ts",
      "default": "./dist/dtos/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@repo/shared-config": "workspace:*",
    "typescript": "^5.9.3"
  }
}
