{
  "name": "microservices",
  "version": "1.0.0",
  "description": "E-commerce backend microservices architecture",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:auth": "pnpm --filter auth-service dev",
    "dev:products": "pnpm --filter products-service dev",
    "dev:cart": "pnpm --filter cart-service dev",
    "dev:orders": "pnpm --filter orders-service dev",
    "dev:reviews": "pnpm --filter reviews-service dev",
    "build": "pnpm --recursive --filter \"./apps/*\" --filter \"./packages/*\" build",
    "build:apps": "pnpm --recursive --filter \"./apps/*\" build",
    "build:packages": "pnpm --recursive --filter \"./packages/*\" build",
    "test": "pnpm --recursive test",
    "test:unit": "vitest",
    "test:coverage": "vitest --coverage",
    "db:push": "pnpm --recursive --filter \"./apps/*\" db:push",
    "db:studio": "pnpm --recursive --filter \"./apps/*\" db:studio",
    "db:generate": "pnpm --recursive --filter \"./apps/*\" db:generate",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "seed": "pnpm --filter scripts seed:all",
    "seed:auth": "pnpm --filter scripts seed:auth",
    "seed:products": "pnpm --filter scripts seed:products",
    "seed:orders": "pnpm --filter scripts seed:orders",
    "seed:reviews": "pnpm --filter scripts seed:reviews",
    "reset": "pnpm db:push && pnpm seed",
    "reset:clean": "docker-compose down -v && docker-compose up -d && sleep 5 && pnpm db:push && pnpm seed",
    "test:smoke": "./scripts/smoke-test.sh",
    "test:reset": "./scripts/reset-and-seed.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^20.19.30",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.28.1"
}
